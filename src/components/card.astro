---
import { Image } from "astro:assets";
import Poster from "../assets/images/poster5.png";
---
  <div class="row">
      <article class="card">
        <div class="poster">
          <Image class="img_poster5" src={Poster} alt="referance."/>
        </div>
          <h2>Beetlejuice.</h2>
          <p>Director: Tim Burton.</p>
          <p>Año: 1988.</p>
          <p>Género: Comedia, Fantasía, Terror.</p>
        </div>
      </article>

<style>
    @reference "../styles/global.css";
    .row{
      @apply w-[1500px] p-[25px] flex gap-2 scroll-smooth overflow-scroll;
    }
    .row_card{
      @apply flex-[25%,20px];
    }
    .card{
      @apply w-100 bg-white/5 rounded-[14px] pt-5 overflow-hidden shadow-[0_0_20px_rgba(155,89,255,0.15)] border border-dashed transition-all duration-300 ease-in-out;
    }

    .card:hover{
      @apply -translate-y-px scale-[1.03] shadow-[0_0_30px_rgba(155,89,255,0.4)] border-[rgba(155,89,255,0.6)];
    }

    .card__img{
      @apply w-[400px] max-w-full max-h-full object-cover transition-transform duration-66 ease-in-out;
    }
</style>